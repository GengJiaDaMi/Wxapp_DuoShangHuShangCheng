.discript {
    background: #f4f4f4;
    width: 700rpx;
    box-sizing: border-box;
    margin: 35rpx 25rpx;
    border-radius: 10rpx;
    padding: 15rpx;
    height: 200rpx;
    border: 1rpx solid #CCC;
}

.padd5 {
    padding: 3%;
}

.flexrow {
    display: flex;
    height: 100rpx;
    justify-content: space-between;
    padding: 15rpx 0;
    align-items: center;
    border-bottom: 1rpx solid #e1e1e1;
    box-sizing: border-box;
}

input {
    text-align: right;
}

.colrgreen {
    color: #39a336!important;
    width: 72%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.bond {
    font-size: 200rpx;
    width: 200rpx;
    height: 200rpx;
    border: 1rpx dashed #ccc;
    text-align: center;
    line-height: 170rpx;
    color: #ccc;
    margin: 30rpx 0;
    border-radius: 10rpx;
    background: #f8f7fc;
    overflow: hidden;
}

.bond image {
    width: 100%;
    height: 100%;
}

button {
    width: 360rpx !important;
    height: 90rpx;
    background: #38a435 !important;
    color: white !important;
    border: unset !important;
}

.btnBox {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 90rpx;
    margin: 80rpx 0;
}