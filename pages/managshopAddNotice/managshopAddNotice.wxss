button {
    width: 360rpx!important;
    height: 90rpx;
    background: #38a435!important;
    color: white!important;
    border: unset!important;
}

.btnBox {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 90rpx;
    margin-top: 150rpx;
}

.image {
    width: 300rpx;
    height: 300rpx;
    border: 1rpx dashed #d7d7d7;
    margin-top: 25rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.image image {
    width: 100%;
    height: 100%;
    display: block;
}

.form {
    width: 700rpx;
    margin: auto;
}

.item {
    width: 100%;
    border-bottom: 1rpx solid #e8e8e8;
    min-height: 125rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item label {
    width: 160rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.item input {
    width: 540rpx;
    height: 100%;
    display: block;
}

.column {
    padding: 25rpx 0;
    align-items: flex-start;
    flex-direction: column;
}

.noneBorder {
    border: none;
}

textarea {
    width: 100%;
    border: 1rpx solid #d7d7d7;
    height: 200rpx;
    padding: 15rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    margin-bottom: 15rpx;
}