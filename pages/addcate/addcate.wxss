button {
    width: 360rpx!important;
    height: 90rpx;
    background: #38a435!important;
    color: white!important;
    border: unset!important;
}

.btnBox {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 90rpx;
    margin-top: 150rpx;
}

.image {
    font-size: 200rpx;
    width: 200rpx;
    height: 200rpx;
    border: 1rpx dashed #ccc;
    text-align: center;
    line-height: 170rpx;
    color: #ccc;
    margin-top: 25rpx;
    border-radius: 10rpx;
    background: #f8f7fc;
    overflow: hidden;
}

.image image {
    width: 100%;
    height: 100%;
    display: block;
}

.form {
    width: 700rpx;
    margin: auto;
}

.item {
    width: 100%;
    border-bottom: 1rpx solid #d7d7d7;
    min-height: 125rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item label {
    width: 160rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.item input {
    width: 540rpx;
    height: 100%;
    display: block;
}

.column {
    padding: 25rpx 0;
    align-items: flex-start;
    flex-direction: column;
}

.noneBorder {
    border: none;
}