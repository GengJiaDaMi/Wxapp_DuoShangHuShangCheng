/* pages/appraise/appraise.wxss */

@import '../refunds/refunds.wxss';
.icon_shop {
    width: 35rpx;
    height: 33rpx;
    float: left;
    margin: 0 15rpx;
}

.order-details-text {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #e8e8e8;
    margin-bottom: 10rpx;
}

.icon_shop image {
    width: 35rpx;
    height: 33rpx;
    display: block;
    line-height: unset;
}

.img1 {
    width: 28rpx;
    height: 35rpx;
    margin-right: 15rpx;
}

.shop-name {
    font-size: 37rpx;
    font-weight: 550;
    color: #434343;
    float: left;
}

page {
    background-color: #f2f2f2;
}

.gray {
    color: #797979;
    font-size: 30rpx;
}

.icon-shop {
    width: 44rpx;
    height: 54rpx;
    margin: 15rpx 15rpx 0 15rpx;
    background-repeat: no-repeat;
}

.mar35 {
    margin-left: 35rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #a1a1a1;
}

.mar10 {
    margin-top: 10%;
}

.address1 {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0px 0px 3px 0px rgba(183, 183, 183, 0.8);
}

.marleft30 {
    margin-left: 30rpx;
    margin-top: 15rpx;
}

.appraisebody {
    padding: 20rpx;
}

.stars {
    padding: 20rpx;
    box-sizing: border-box;
    position: relative;
    box-shadow: 0px 0px 3px 0px rgba(183, 183, 183, 0.8);
    background-color: #fff;
    margin-left: 3%;
    width: 94%;
    border-radius: 10rpx;
}

.stars image {
    width: 190rpx;
    height: 190rpx;
    border: 1rpx solid #000;
    position: absolute;
    top: 41rpx;
    left: 36rpx;
}

.stars .content view {
    font-size: 32rpx;
    color: #4a4a4a;
}

.stars .content>view:last-of-type {
    height: 40rpx;
    margin-top: 20rpx;
}

.stars .content>view:last-of-type view {
    float: left;
    width: 42rpx;
    height: 42rpx;
    margin-right: 25rpx;
    background-size: 100% 100%;
}

.reviews {
    border: 1rpx solid #d7d7d7;
    border-radius: 10rpx;
    height: 130rpx;
    color: #666666;
}

.raisetitle {
    font-size: 30rpx;
    margin: 15rpx 0;
}

.font30 {
    font-size: 30rpx;
}

textarea {
    cursor: auto;
    width: 100%;
    height: 120rpx;
    display: block;
    position: relative;
    overflow: hidden;
    font-size: 30rpx;
    padding: 20rpx;
}