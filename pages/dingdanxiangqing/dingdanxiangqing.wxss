/* pages/dingdanxiangqing/dingdanxiangqing.wxss */

.order-address {
    width: 100%;
    /* height: 160rpx; */
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0px 0px 3px 0px rgba(183, 183, 183, 0.8);
    position: relative;
    box-sizing: border-box;
}

.icon_address {
    position: absolute;
    top: 26rpx;
    left: 19rpx;
}

.icon_shop {
    width: 35rpx;
    height: 33rpx;
    float: left;
    margin: 0 15rpx;
}

.icon_shop image {
    width: 35rpx;
    height: 33rpx;
    display: block;
    line-height: unset;
}

.icon_address image {
    width: 28rpx;
    height: 35rpx;
    display: block;
}

.btn {
    width: 140rpx;
    height: 50rpx;
    border: 1rpx solid #d7d7d7;
    float: right;
    margin-right: 25rpx;
    border-radius: 25px;
    text-align: center;
    line-height: 50rpx;
    color: #777;
    font-size: 26rpx;
}

.pay {
    width: 703rpx;
    margin: 0px auto;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0px 0px 3px 0px rgba(183, 183, 183, 0.8);
    overflow: hidden;
    color: #666666;
}

.order-details {
    width: 703rpx;
    height: auto;
    background-color: #fff;
    margin-left: 26rpx;
    border-radius: 5px;
    box-shadow: 0px 0px 3px 0px rgba(183, 183, 183, 0.8);
    position: relative;
}

.icon-shop image {
    height: 48rpx;
    width: 48rpx;
    display: block;
    line-height: unset;
}

.shop-name {
    font-size: 32rpx;
    font-weight: 550;
    color: #262626;
    float: left;
}

.order-details-text {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #d7d7d7;
}

page {
    background-color: #F4F4F4;
}

.ping {
    position: fixed;
    background-color: rgba(178, 178, 178, 0.8);
    width: 100%;
    height: 1200rpx;
    top: 0;
}

.pingbody {
    width: 88%;
    background-color: #fff;
    margin-top: 30%;
    margin-left: 6%;
    border-radius: 20rpx;
}

.img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 15rpx;
    margin-left: 0;
}

.inflex {
    display: flex;
    margin-left: 40rpx;
    margin-top: 20rpx;
}

.hei40 {
    padding: 30rpx 50rpx 0 50rpx;
}

.centhei40 {
    width: 50%;
    height: 100rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}

.colorg {
    color: #39a336;
    border-left: 1rpx solid #f4f4f4;
}

textarea {
    width: 100%;
    border: 1rpx solid #d7d7d7;
    height: 150rpx;
    padding: 15rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    margin-bottom: 15rpx;
}

.pingbottom {
    display: flex;
    border-top: 1rpx solid #f4f4f4;
    height: 100rpx;
    align-items: center;
}